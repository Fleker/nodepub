{
  "name": "nodepub",
  "version": "3.2.1",
  "description": "Create valid EPUB (v2) ebooks with metadata, contents and cover image.",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha test/**/*-spec.js",
    "lint": "npm run lint-src && npm run lint-example && npm run lint-test",
    "lint-src": "npx standard --fix src",
    "lint-example": "npx standard --fix example",
    "lint-test": "npx standard --fix test",
    "example": "node --trace-uncaught example/example.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kcartlidge/nodepub.git"
  },
  "keywords": [
    "epub",
    "ebook"
  ],
  "author": "K Cartlidge (https://kcartlidge.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kcartlidge/nodepub/issues"
  },
  "homepage": "https://github.com/kcartlidge/nodepub",
  "dependencies": {
    "archiver": "^7.0.1",
    "audit": "^0.0.6",
    "moment": "^2.30.1"
  },
  "devDependencies": {
    "chai": "5.2.x",
    "mocha": "^11.7.1",
    "sinon": "21.0.x"
  },
  "standard": {
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect"
    ]
  }
}
